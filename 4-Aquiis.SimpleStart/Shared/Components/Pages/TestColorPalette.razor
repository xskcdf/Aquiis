@page "/test/color-palette"
@rendermode InteractiveServer
<PageTitle>Proposed Color Palette Test</PageTitle>

<style>
    /* Corporate Palette (Deep Blue) */
    .palette-standard {
        --aquiis-primary: #2C5F8D;
        --aquiis-primary-dark: #1E3A5F;
        --aquiis-secondary: #F59E42;
        --aquiis-success: #388E3C;
        --aquiis-success-light: #4CAF50;
        --aquiis-info: #5A8FBF;
        --aquiis-danger: #dc3545;
        --aquiis-warning: #ffc107;
        --aquiis-neutral-light: #F5F7FA;
        --aquiis-neutral-gray: #E0E7EE;
        --aquiis-neutral-gray-dark: #8A9BA8;
        --aquiis-neutral-dark: #333333;
        --aquiis-neutral-charcoal: #1a1a1a;
    }
    
    /* Teal Palette (Modern Fresh) */
    .palette-teal {
        --aquiis-primary: #0D9488;
        --aquiis-primary-dark: #0F766E;
        --aquiis-secondary: #FF6B6B;
        --aquiis-success: #388E3C;
        --aquiis-success-light: #4CAF50;
        --aquiis-info: #14B8A6;
        --aquiis-danger: #dc3545;
        --aquiis-warning: #ffc107;
        --aquiis-neutral-light: #FAFAFA;
        --aquiis-neutral-gray: #E2E8F0;
        --aquiis-neutral-gray-dark: #64748B;
        --aquiis-neutral-dark: #475569;
        --aquiis-neutral-charcoal: #1e293b;
    }

    /* Navy Palette (Authority & Elegance) */
    .palette-obsidian {
        --aquiis-primary: #25344d;
        --aquiis-primary-dark: #0F172A;
        --aquiis-secondary: #d17315;
        --aquiis-success: #1a531d;
        --aquiis-success-light: #4CAF50;
        --aquiis-info: #1b60b4;
        --aquiis-danger: #712028;
        --aquiis-warning: #d29e00;
        --aquiis-neutral-light: #FAF9F6;
        --aquiis-neutral-gray: #CBD5E1;
        --aquiis-neutral-gray-dark: #475569;
        --aquiis-neutral-dark: #2a3749;
        --aquiis-neutral-charcoal: #1a1f2e;
        --aquiis-neutral-light-charcoal: #282a2e;
    }

    .palette-card {
        border: 1px solid #ddd;
        border-radius: 0.25rem;
        overflow: hidden;
    }
    
    .color-swatch {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: white;
    }
    
    .palette-selector {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        background: white;
        padding: 1rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
</style>

<!-- Palette Selector -->
<div class="palette-selector">
    <label class="form-label mb-2" style="font-weight: 600;">
        <i class="bi bi-palette"></i> Select Palette:
    </label>
    <select class="form-select" @bind="selectedPalette">
        <option value="standard">Standard (Deep Blue)</option>
        <option value="teal">Teal (Modern Fresh)</option>
        <option value="obsidian">Obsidian (Authority & Elegance)</option>
    </select>
</div>

