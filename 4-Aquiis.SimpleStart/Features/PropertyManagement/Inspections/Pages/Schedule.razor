@page "/propertymanagement/inspections/schedule"

@using Aquiis.SimpleStart.Features.PropertyManagement
@using Aquiis.Core.Entities
@using Microsoft.AspNetCore.Authorization

@inject PropertyService PropertyService
@inject NavigationManager NavigationManager
@attribute [OrganizationAuthorize("Owner", "Administrator", "PropertyManager")]
@rendermode InteractiveServer

<PageTitle>Inspection Schedule</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-calendar-check"></i> Routine Inspection Schedule</h1>
    <button class="btn btn-outline-secondary" @onclick="RefreshData">
        <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h6>Overdue</h6>
                    <h3>@overdueProperties.Count</h3>
                    <small>Inspections overdue</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6>Due Soon</h6>
                    <h3>@dueSoonProperties.Count</h3>
                    <small>Due within 30 days</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6>Scheduled</h6>
                    <h3>@scheduledProperties.Count</h3>
                    <small>Future inspections</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h6>Not Scheduled</h6>
                    <h3>@notScheduledProperties.Count</h3>
                    <small>No inspection date</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Overdue Inspections -->
    @if (overdueProperties.Any())
    {
        <div class="card mb-3">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Overdue Inspections</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Last Inspection</th>
                                <th>Due Date</th>
                                <th>Days Overdue</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var property in overdueProperties)
                            {
                                <tr>
                                    <td>
                                        <strong>@property.Address</strong>
                                        <br /><small class="text-muted">@property.City, @property.State</small>
                                    </td>
                                    <td>
                                        @if (property.LastRoutineInspectionDate.HasValue)
                                        {
                                            @property.LastRoutineInspectionDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>@property.NextRoutineInspectionDueDate!.Value.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-danger">@property.DaysOverdue days</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => ViewProperty(property.Id)" title="View Property">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" @onclick="() => CreateInspection(property.Id)" title="Create Inspection">
                                                <i class="bi bi-clipboard-check"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Due Soon Inspections -->
    @if (dueSoonProperties.Any())
    {
        <div class="card mb-3">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="bi bi-exclamation-circle-fill"></i> Due Within 30 Days</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Last Inspection</th>
                                <th>Due Date</th>
                                <th>Days Until Due</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var property in dueSoonProperties)
                            {
                                <tr>
                                    <td>
                                        <strong>@property.Address</strong>
                                        <br /><small class="text-muted">@property.City, @property.State</small>
                                    </td>
                                    <td>
                                        @if (property.LastRoutineInspectionDate.HasValue)
                                        {
                                            @property.LastRoutineInspectionDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>@property.NextRoutineInspectionDueDate!.Value.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-warning">@property.DaysUntilInspectionDue days</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => ViewProperty(property.Id)" title="View Property">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" @onclick="() => CreateInspection(property.Id)" title="Create Inspection">
                                                <i class="bi bi-clipboard-check"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- All Properties Inspection Status -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> All Properties</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Last Inspection</th>
                            <th>Next Due</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var property in allProperties.OrderBy(p => p.NextRoutineInspectionDueDate ?? DateTime.MaxValue))
                        {
                            <tr>
                                <td>
                                    <strong>@property.Address</strong>
                                    <br /><small class="text-muted">@property.City, @property.State</small>
                                </td>
                                <td>
                                    @if (property.LastRoutineInspectionDate.HasValue)
                                    {
                                        @property.LastRoutineInspectionDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    @if (property.NextRoutineInspectionDueDate.HasValue)
                                    {
                                        @property.NextRoutineInspectionDueDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not scheduled</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetInspectionStatusBadge(property.InspectionStatus)">
                                        @property.InspectionStatus
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" @onclick="() => ViewProperty(property.Id)" title="View Property">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-warning" @onclick="() => CreateInspection(property.Id)" title="Create Inspection">
                                            <i class="bi bi-clipboard-check"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private List<Property> allProperties = new();
    private List<Property> overdueProperties = new();
    private List<Property> dueSoonProperties = new();
    private List<Property> scheduledProperties = new();
    private List<Property> notScheduledProperties = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            allProperties = await PropertyService.GetAllAsync();
            overdueProperties = await PropertyService.GetPropertiesWithOverdueInspectionsAsync();
            dueSoonProperties = await PropertyService.GetPropertiesWithInspectionsDueSoonAsync(30);
            
            scheduledProperties = allProperties
                .Where(p => p.NextRoutineInspectionDueDate.HasValue && 
                           p.InspectionStatus == "Scheduled")
                .ToList();
            
            notScheduledProperties = allProperties
                .Where(p => !p.NextRoutineInspectionDueDate.HasValue)
                .ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private void ViewProperty(Guid propertyId)
    {
        NavigationManager.NavigateTo($"/propertymanagement/properties/{propertyId}");
    }

    private void CreateInspection(Guid propertyId)
    {
        NavigationManager.NavigateTo($"/propertymanagement/inspections/create/{propertyId}");
    }

    private string GetInspectionStatusBadge(string status)
    {
        return status switch
        {
            "Overdue" => "bg-danger",
            "Due Soon" => "bg-warning",
            "Scheduled" => "bg-success",
            "Not Scheduled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
