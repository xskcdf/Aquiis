{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "--project", "${workspaceFolder}/Aquiis.SimpleStart"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/Aquiis.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "git: stage all and commit",
      "type": "shell",
      "command": "git add -A && git commit -m 'See REVISIONS.md for details' && git push",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Commit message"
    }
  ]
}
