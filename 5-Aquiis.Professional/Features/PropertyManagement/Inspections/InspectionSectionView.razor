<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-@Icon"></i> @Title</h5>
    </div>
    <div class="card-body">
        @if (Items != null && Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 40%;">Item</th>
                            <th style="width: 15%;">Status</th>
                            <th style="width: 45%;">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Items)
                        {
                            <tr>
                                <td>@item.Label</td>
                                <td>
                                    @if (item.IsGood)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Good</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Issue</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <span class="text-muted">@item.Notes</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Icon { get; set; } = "clipboard-check";

    [Parameter]
    public List<(string Label, bool IsGood, string? Notes)>? Items { get; set; }
}
