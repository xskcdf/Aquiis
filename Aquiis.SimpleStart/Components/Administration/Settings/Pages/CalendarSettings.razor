@page "/administration/settings/calendar"
@using Aquiis.SimpleStart.Models
@using Aquiis.SimpleStart.Services
@using Aquiis.SimpleStart.Utilities
@using Microsoft.AspNetCore.Authorization

@inject CalendarSettingsService SettingsService
@inject UserContextService UserContext
@inject ToastService ToastService
@inject NavigationManager Navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Administrator,SuperAdministrator")]

<PageTitle>Calendar Settings</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-calendar-check"></i> Calendar Settings</h1>
        <p class="text-muted">Configure which events are automatically added to the calendar</p>
    </div>
    <button class="btn btn-secondary" @onclick="BackToDashboard">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </button>
</div>

@if (loading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Auto-Create Calendar Events</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>How it works:</strong> When enabled, events are automatically created on the calendar when you create tours, inspections, maintenance requests, etc. 
                        Disable a type if you prefer to manage those events manually.
                    </div>

                    @if (settings.Any())
                    {
                        <div class="list-group">
                            @foreach (var setting in settings)
                            {
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center">
                                                <i class="bi @(setting.DefaultIcon ?? "bi-calendar-event") me-3" 
                                                   style="font-size: 1.5rem; color: @(setting.DefaultColor ?? "#6c757d");"></i>
                                                <div>
                                                    <h6 class="mb-0">@CalendarEventTypes.GetDisplayName(setting.EntityType)</h6>
                                                    <small class="text-muted">@setting.EntityType events</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-check form-switch">
                                                <input type="checkbox" 
                                                       class="form-check-input" 
                                                       id="@($"auto-{setting.Id}")"
                                                       checked="@setting.AutoCreateEvents"
                                                       @onchange="@(e => ToggleAutoCreate(setting, (bool)e.Value!))" />
                                                <label class="form-check-label" for="@($"auto-{setting.Id}")">
                                                    @if (setting.AutoCreateEvents)
                                                    {
                                                        <span class="badge bg-success">Enabled</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Disabled</span>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    @onclick="() => ShowColorPicker(setting)">
                                                <i class="bi bi-palette"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mt-3">
                            <button class="btn btn-primary" @onclick="SaveAllSettings" disabled="@saving">
                                @if (saving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            No schedulable entity types found. Make sure your entities implement ISchedulableEntity.
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-eye"></i> Default Calendar View Filters</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Select which event types should be visible by default when opening the calendar.</p>

                    @if (settings.Any())
                    {
                        <div class="list-group">
                            @foreach (var setting in settings)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <i class="bi @(setting.DefaultIcon ?? "bi-calendar-event") me-3" 
                                               style="font-size: 1.25rem; color: @(setting.DefaultColor ?? "#6c757d");"></i>
                                            <span>@CalendarEventTypes.GetDisplayName(setting.EntityType)</span>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input type="checkbox" 
                                                   class="form-check-input" 
                                                   id="@($"show-{setting.Id}")"
                                                   checked="@setting.ShowOnCalendar"
                                                   @onchange="@(e => ToggleShowOnCalendar(setting, (bool)e.Value!))" />
                                            <label class="form-check-label" for="@($"show-{setting.Id}")">
                                                @if (setting.ShowOnCalendar)
                                                {
                                                    <span class="badge bg-primary">Show</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hide</span>
                                                }
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mt-3">
                            <button class="btn btn-primary" @onclick="SaveAllSettings" disabled="@saving">
                                @if (saving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Tips</h5>
                </div>
                <div class="card-body">
                    <h6>Auto-Create Events</h6>
                    <p class="small">When enabled, calendar events are automatically created when you create or update the source entity (tour, inspection, etc.).</p>
                    
                    <h6 class="mt-3">Default View Filters</h6>
                    <p class="small">These settings control which event types are shown by default when opening the calendar. Users can still toggle filters on/off.</p>
                    
                    <h6 class="mt-3">Colors & Icons</h6>
                    <p class="small">Click the palette icon to customize the color and icon for each event type.</p>
                    
                    <div class="alert alert-warning small mt-3">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Note:</strong> Disabling auto-create will prevent new events from being created, but won't delete existing calendar events.
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Color Picker Modal -->
@if (selectedSetting != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Customize @CalendarEventTypes.GetDisplayName(selectedSetting.EntityType)</h5>
                    <button type="button" class="btn-close" @onclick="CloseColorPicker"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="color" 
                               class="form-control form-control-color" 
                               @bind="selectedSetting.DefaultColor" />
                        <small class="text-muted">Select a color for this event type</small>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Icon (Bootstrap Icon class)</label>
                        <input type="text" 
                               class="form-control" 
                               @bind="selectedSetting.DefaultIcon"
                               placeholder="bi-calendar-event" />
                        <small class="text-muted">Example: bi-house-door, bi-clipboard-check, bi-tools</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Preview</label>
                        <div class="p-3 border rounded">
                            <div class="d-flex align-items-center">
                                <i class="bi @(selectedSetting.DefaultIcon ?? "bi-calendar-event") me-2" 
                                   style="font-size: 2rem; color: @(selectedSetting.DefaultColor ?? "#6c757d");"></i>
                                <span>@CalendarEventTypes.GetDisplayName(selectedSetting.EntityType)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseColorPicker">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveColorSettings">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Models.CalendarSettings> settings = new();
    private Models.CalendarSettings? selectedSetting;
    private bool loading = true;
    private bool saving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        loading = true;
        try
        {
            var orgId = await UserContext.GetOrganizationIdAsync();
            if (!string.IsNullOrEmpty(orgId))
            {
                settings = await SettingsService.GetSettingsAsync(orgId);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading settings: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private void BackToDashboard()
    {
        Navigation.NavigateTo("/administration/dashboard");
    }

    private void ToggleAutoCreate(Models.CalendarSettings setting, bool enabled)
    {
        setting.AutoCreateEvents = enabled;
    }

    private void ToggleShowOnCalendar(Models.CalendarSettings setting, bool show)
    {
        setting.ShowOnCalendar = show;
    }

    private async Task SaveAllSettings()
    {
        saving = true;
        try
        {
            await SettingsService.UpdateMultipleSettingsAsync(settings);
            ToastService.ShowSuccess("Calendar settings saved successfully");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error saving settings: {ex.Message}");
        }
        finally
        {
            saving = false;
        }
    }

    private void ShowColorPicker(Models.CalendarSettings setting)
    {
        selectedSetting = setting;
    }

    private void CloseColorPicker()
    {
        selectedSetting = null;
    }

    private async Task SaveColorSettings()
    {
        if (selectedSetting != null)
        {
            try
            {
                await SettingsService.UpdateSettingAsync(selectedSetting);
                ToastService.ShowSuccess("Color and icon updated");
                CloseColorPicker();
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"Error updating settings: {ex.Message}");
            }
        }
    }
}
