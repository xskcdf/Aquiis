@page "/administration/application/dashboard"

@inject NavigationManager NavigationManager

@rendermode InteractiveServer

<PageTitle>Application Dashboard</PageTitle>
<!-- Application management UI goes here -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-window-dock"></i> Application Management</h1>
    <div class="text-muted">
        <i class="bi bi-shield-check"></i> Admin Only
    </div>
</div>
<p>Welcome to the Application Dashboard. Here you can manage application-wide settings and monitor system status.</p>
<!-- Additional dashboard components can be added below -->
<div>
    <button class="btn btn-primary" @onclick="GoToServices">Manage Scheduled Tasks</button>
    <button class="btn btn-secondary" @onclick="ViewDailyReport">View System Status</button>
    <button class="btn btn-info" @onclick="ManageDatabase">Manage Data</button>
</div>

@code {
    private void ViewDailyReport()
    {
        // Logic to view the daily system status report
        NavigationManager.NavigateTo("/administration/application/dailyreport");
    }

    private void GoToServices()
    {
        // Logic to navigate to the scheduled tasks management page
        NavigationManager.NavigateTo("/administration/settings/services");
    }

    private void ManageDatabase()
    {
        // Logic to navigate to the database management page
        NavigationManager.NavigateTo("/administration/application/database");
    }
}